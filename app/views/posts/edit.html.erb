<h1>Edit Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Post Guidelines</p>
    <%= image_tag("sloth.jpg") %>
    <ul>
      <li>Please be kind and rewind</li>
      <li>Brooks was here</li>
      <li>Paint you wagon</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, row: 8, class: 'form-control', placeholder: "Enter body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
